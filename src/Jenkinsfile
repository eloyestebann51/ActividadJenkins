pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'NodeJS', type: 'NodeJSInstallation'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            steps {
                echo "Ejecutando tests en modo CI..."
                sh 'npx jest --ci --watchAll=false'
            }
        }
    }

    post {
        always {
            echo "Build finalizado. Revisa los logs."
        }
        success {
            echo "Todos los tests pasaron"
        }
        failure {
            echo "Al menos un test fall√≥"
        }
    }
}
