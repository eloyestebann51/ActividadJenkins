pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'NodeJS', type: 'NodeJSInstallation'
        PATH = "${env.NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                echo "Ejecutando tests en modo CI..."
                // Ejecuta Jest directamente y falla si algún test falla
                sh 'npx jest --ci --watchAll=false --passWithNoTests=false'
            }
        }

        stage('Build') {
            steps {
                echo "Construyendo la app..."
                sh 'npm run build'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'build/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "Build y tests completados correctamente"
        }
        failure {
            echo "Al menos un test falló, build detenido"
        }
    }
}
